<!-- Login Page -->
<div class="min-h-screen flex items-center justify-center px-4 py-12 bg-white">
  <div class="max-w-sm md:max-w-md w-full animate-fade-in-up">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="w-20 h-20 md:w-24 md:h-24 mx-auto bg-sky-100 rounded-full flex items-center justify-center mb-5 shadow-sm">
        <i class="fa-solid fa-university text-sky-500 text-3xl md:text-4xl"></i>
      </div>
      <h2 class="text-2xl md:text-3xl font-bold text-gray-800">ยินดีต้อนรับกลับ!</h2>
      <p class="mt-1 text-gray-500 text-sm">เข้าสู่ระบบเพื่อหาเพื่อนติว</p>
    </div>

    <!-- Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-7">
      <%= form_with url: login_path, method: :post, class: "space-y-5" do |f| %>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-600 mb-1.5">อีเมล</label>
          <div class="relative">
            <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
              <i class="fa-solid fa-envelope"></i>
            </div>
            <input type="email" name="email" id="email" required
                   class="w-full pl-11 pr-4 py-3.5 rounded-xl border border-gray-200 focus:ring-2 focus:ring-sky-500 focus:border-transparent outline-none transition-all bg-white text-sm text-gray-700"
                   placeholder="your.email@university.ac.th">
          </div>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-600 mb-1.5">รหัสผ่าน</label>
          <div class="relative">
            <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
              <i class="fa-solid fa-lock"></i>
            </div>
            <input type="password" name="password" id="password" required
                   class="w-full pl-11 pr-4 py-3.5 rounded-xl border border-gray-200 focus:ring-2 focus:ring-sky-500 focus:border-transparent outline-none transition-all bg-white text-sm text-gray-700"
                   placeholder="••••••••">
          </div>
        </div>

        <button type="submit"
                class="w-full bg-sky-500 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-sky-500/20 active:scale-95 transition-all text-sm flex items-center justify-center gap-2">
          เข้าสู่ระบบ
          <i class="fa-solid fa-arrow-right"></i>
        </button>
      <% end %>
    </div>

    <!-- Register Link -->
    <div class="mt-6 text-center">
      <p class="text-gray-400 text-sm">
        ยังไม่มีบัญชี?
        <%= link_to "สมัครสมาชิก", register_path, class: "text-sky-500 font-semibold hover:text-sky-600" %>
      </p>
    </div>

    <p class="text-xs text-gray-400 mt-6 text-center">
      <i class="fa-solid fa-lock mr-1"></i> เฉพาะนักศึกษาในสถาบันเท่านั้น
    </p>
  </div>
</div>
