<!-- Partner Profile Page -->
<div class="max-w-lg md:max-w-2xl lg:max-w-3xl mx-auto px-4 md:px-6 py-6">
  <div class="animate-fade-in-up">
    <!-- Back button -->
    <div class="mb-4">
      <%= link_to chat_room_path(@chat_room), class: "inline-flex items-center gap-2 text-sm text-gray-400 hover:text-sky-500 transition-colors" do %>
        <i class="fa-solid fa-arrow-left"></i>
        กลับไปห้องแชท
      <% end %>
    </div>

    <!-- Profile Card -->
    <div class="bg-white dark:bg-slate-800 rounded-3xl border border-gray-100 dark:border-slate-700 shadow-sm overflow-hidden">
      <!-- Cover -->
      <div class="h-24 bg-gradient-to-br from-sky-400 to-indigo-500 relative">
        <div class="absolute inset-0 bg-white/10 backdrop-blur-[1px]"></div>
      </div>

      <!-- Avatar + Name -->
      <div class="relative px-6 pb-6">
        <div class="-mt-12 mb-4 flex flex-col items-center">
          <div class="w-24 h-24 rounded-full overflow-hidden ring-4 ring-white shadow-lg mb-3 bg-white">
            <% if @other_revealed %>
              <img src="https://api.dicebear.com/9.x/adventurer/svg?seed=<%= @other_user.name %>&backgroundColor=b6e3f4" alt="avatar" class="w-full h-full object-cover">
            <% else %>
              <img src="https://api.dicebear.com/9.x/shapes/svg?seed=buddy<%= @chat_room.id %>&backgroundColor=e0e7ff" alt="avatar" class="w-full h-full object-cover">
            <% end %>
          </div>

          <h2 class="text-xl font-bold text-gray-800 dark:text-gray-100">
            <% if @other_revealed %>
              <%= @other_user.name %>
            <% else %>
              เพื่อนติวปริศนา
            <% end %>
          </h2>

          <p class="text-sm text-sky-500 mt-1">
            <i class="fa-solid fa-building text-sky-400 mr-1"></i>
            คณะ<%= @other_user.faculty %>
          </p>

          <!-- Rating -->
          <div class="flex items-center gap-2 mt-2">
            <% avg = @other_user.average_rating %>
            <% if avg > 0 %>
              <div class="flex items-center gap-0.5">
                <% avg.round.times do %><i class="fa-solid fa-star text-yellow-400 text-sm"></i><% end %>
                <% (5 - avg.round).times do %><i class="fa-regular fa-star text-gray-300 text-sm"></i><% end %>
              </div>
              <span class="text-sm text-gray-500"><%= avg %></span>
              <span class="text-xs text-gray-400">(<%= @other_user.review_count %> รีวิว)</span>
            <% else %>
              <span class="text-xs text-gray-400 bg-gray-100 px-2 py-1 rounded-full">ยังไม่มีรีวิว</span>
            <% end %>
          </div>

          <% unless @other_revealed %>
            <div class="mt-3 flex items-center gap-1.5 text-xs text-amber-600 bg-amber-50 px-3 py-1.5 rounded-full border border-amber-200">
              <i class="fa-solid fa-user-secret"></i>
              ยังไม่เปิดเผยตัวตน
            </div>
          <% end %>
        </div>

        <!-- Bio (only if revealed) -->
        <% if @other_revealed && @other_user.bio.present? %>
          <div class="bg-gray-50 rounded-2xl p-4 mb-4">
            <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2 flex items-center gap-1.5">
              <i class="fa-solid fa-pen"></i>
              แนะนำตัว
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed"><%= @other_user.bio %></p>
          </div>
        <% elsif !@other_revealed %>
          <div class="bg-gray-50 rounded-2xl p-4 mb-4 text-center">
            <p class="text-xs text-gray-400">
              <i class="fa-solid fa-lock mr-1"></i>
              เปิดเผยตัวตนเพื่อดูข้อมูลแนะนำตัว
            </p>
          </div>
        <% end %>

        <!-- Subjects -->
        <div class="grid grid-cols-2 gap-3 mb-4">
          <div class="bg-green-50 p-4 rounded-2xl border border-green-100 text-center">
            <p class="text-[10px] text-gray-400 uppercase font-medium mb-1">วิชาที่ถนัด</p>
            <p class="font-bold text-green-700 text-sm"><%= @other_user.strong_subject || "—" %></p>
          </div>
          <div class="bg-red-50 p-4 rounded-2xl border border-red-100 text-center">
            <p class="text-[10px] text-gray-400 uppercase font-medium mb-1">วิชาที่อ่อน</p>
            <p class="font-bold text-red-700 text-sm"><%= @other_user.weak_subject || "—" %></p>
          </div>
        </div>

        <!-- Style & Time -->
        <div class="flex flex-wrap gap-2 mb-4 justify-center">
          <% if @other_user.study_style.present? %>
            <span class="px-3 py-1.5 bg-gray-100 rounded-full text-xs text-gray-600 border border-gray-200 flex items-center gap-1.5">
              <i class="fa-solid fa-book text-sky-500"></i> <%= @other_user.study_style %>
            </span>
          <% end %>
          <% if @other_user.available_time.present? %>
            <span class="px-3 py-1.5 bg-gray-100 rounded-full text-xs text-gray-600 border border-gray-200 flex items-center gap-1.5">
              <i class="fa-regular fa-clock text-sky-500"></i> <%= @other_user.available_time %>
            </span>
          <% end %>
        </div>

        <!-- Reviews -->
        <div class="mt-6">
          <h3 class="text-sm font-bold text-gray-700 mb-3 flex items-center justify-between">
            <span><i class="fa-solid fa-star text-yellow-400 mr-1.5"></i>รีวิวจากเพื่อนๆ</span>
            <span class="text-[10px] text-gray-400 font-normal bg-gray-100 px-2 py-0.5 rounded-full">ไม่ระบุตัวตนผู้รีวิว</span>
          </h3>
          <% reviews = @other_user.reviews_received.order(created_at: :desc).limit(10) %>
          <% if reviews.any? %>
            <div class="space-y-3">
              <% reviews.each do |review| %>
                <div class="bg-gray-50 p-3 rounded-2xl border border-gray-100">
                  <div class="flex items-center gap-1 mb-1">
                    <% review.rating.times do %><i class="fa-solid fa-star text-yellow-400 text-[10px]"></i><% end %>
                    <% (5 - review.rating).times do %><i class="fa-regular fa-star text-gray-300 text-[10px]"></i><% end %>
                    <span class="text-[10px] text-gray-400 ml-auto"><%= time_ago_in_words(review.created_at) %>ที่แล้ว</span>
                  </div>
                  <% if review.comment.present? %>
                    <p class="text-xs text-gray-600 mt-1">"<%= review.comment %>"</p>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-2">
                <i class="fa-regular fa-star text-gray-300 text-lg"></i>
              </div>
              <p class="text-xs text-gray-400">ยังไม่มีรีวิว</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
